{
  "classId": "idm.component.mobile.bottomButtons",
  "comName": "底部按钮组",
  "className": "IBottomButtons",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": []
    },
    {
      "type": "table",
      "bindKey": "buttons",
      "tabText": "按钮[index]",
      "text": "按钮组设置",
      "desc": "设置按钮相关内容",
      "default":[
        {
          "key":"collect",
          "textType":"fixed",
          "layout":"upDown",
          "icon":"",
          "align":"left",
          "text":"12",
          "showBorder":false
        },
        {
          "key":"like",
          "textType":"fixed",
          "layout":"upDown",
          "icon":"",
          "align":"left",
          "text":"121",
          "showBorder":false
        },
        {
          "key":"like",
          "textType":"fixed",
          "layout":"leftRight",
          "icon":"",
          "align":"right",
          "text":"纠错",
          "showBorder":true
        }
      ],
      "children": [
        {
          "type": "input",
          "layoutType": "inline",
          "text": "标识",
          "bindKey": "key",
          "desc": "唯一标识，必填"
        },
        {
          "type": "select",
          "layoutType": "inline",
          "text": "文本类型",
          "bindKey": "textType",
          "desc": "文本值的类型",
          "default": "fixed",
          "dictionary":[
            {
                "label":"固定值",
                "value":"fixed"
            },
            {
              "label": "页面统一接口",
              "value": "pageCommonInterface"
            },
            {
              "label": "自定义函数",
              "value": "customFunction"
            }
          ]
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "结果集名",
          "bindKey": "dataName",
          "desc": "页面接口设定的结果集名称，位置为：页面设置》高级设置》页面接口",
          "default": "",
          "placeholder": "示例：resultData",
          "display": "@[textType=='pageCommonInterface']"
      },
      {
          "type": "textarea",
          "layoutType": "inline",
          "text": "显示字段",
          "bindKey": "dataFiled",
          "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
          "default": "",
          "placeholder": "示例：data.filedName 或者 [0].data[0].filedName",
          "display": "@[textType=='pageCommonInterface']"
      },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "文本",
          "bindKey": "text",
          "desc": "文本内容",
          "display":"@[textType=='fixed']"
        },
        {
          "type": "iconSelect",
          "layoutType": "inline",
          "text": "图标",
          "bindKey": "icon",
          "desc": "用于选择按钮图标"
        },
        {
          "type": "select",
          "layoutType": "inline",
          "text": "对齐方式",
          "bindKey": "align",
          "desc": "用于配置按钮的对齐方式",
          "dictionary":[
            {
                "label":"居左",
                "value":"left"
            },
            {
              "label": "居右",
              "value": "right"
            }
          ],
          "default":"left"
        },
        {
          "type": "select",
          "layoutType": "inline",
          "text": "布局",
          "bindKey": "layout",
          "desc": "用于选择按钮图标",
          "dictionary":[
            {
                "label":"上下",
                "value":"upDown"
            },
            {
              "label": "左右",
              "value": "leftRight"
            }
          ],
          "default":"leftRight"
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "显示边框",
          "bindKey": "showBorder",
          "desc": "是否显示按钮边框",
          "dictionary":[
            {
                "label":"是",
                "value":true
            },
            {
              "label": "否",
              "value": false
            }
          ],
          "default":false
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "bgColor",
          "placeholder": "请选择颜色",
          "display":"@[showBorder]"
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "border",
          "display":"@[showBorder]"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "文字样式",
          "bindKey": "font"
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "文本自定义函数",
          "bindKey": "textCustomFunction",
          "desc": "用于自定义按钮文本值",
          "multiple": false,
          "display":"@[textType=='customFunction']"
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "点击自定义函数",
          "bindKey": "clickCustomFunction",
          "desc": "用于绑定按钮点击触发的函数",
          "multiple": false
        }
      ]
    },
    {
      "type": "group",
      "text": "样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "box"
        },
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "100%"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "70px"
            }
          ]
        },
        {
          "type": "group",
          "text": "背景设置",
          "desc": "点击？查看背景设置用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "背景色",
              "bindKey": "bgColor",
              "placeholder": "请选择颜色",
              "default": {
                "hex8": "#FFFFFFFF"
              }
            },
            {
              "type": "uploadImage",
              "layoutType": "inline",
              "text": "背景图片",
              "bindKey": "bgImgUrl",
              "placeholder": "可输入图片地址或直接上传"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "横向偏移",
              "bindKey": "positionX",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "纵向偏移",
              "bindKey": "positionY",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "背景大小",
              "bindKey": "bgSize",
              "dictionary": [
                {
                  "label": "裁切显示",
                  "value": "cover"
                },
                {
                  "label": "完全显示",
                  "value": "contain"
                },
                {
                  "label": "自定义",
                  "value": "custom"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "宽度",
              "bindKey": "bgSizeWidth",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "高度",
              "bindKey": "bgSizeHeight",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "平铺模式",
              "bindKey": "bgRepeat",
              "dictionary": [
                {
                  "label": "双向重复",
                  "value": "repeat"
                },
                {
                  "label": "水平重复",
                  "value": "repeat-x"
                },
                {
                  "label": "垂直重复",
                  "value": "repeat-y"
                },
                {
                  "label": "不重复",
                  "value": "no-repeat"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "inline",
              "text": "背景模式",
              "bindKey": "bgAttachment",
              "dictionary": [
                {
                  "label": "固定",
                  "value": "fixed"
                },
                {
                  "label": "滚动",
                  "value": "scroll"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            }
          ]
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "border"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "边框阴影",
          "bindKey": "boxShadow",
          "default": "0px 2px 12px 0px rgba(0, 0, 0, 0.07)"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "文字",
          "bindKey": "font"
        }
      ]
    },
    {
      "type": "table",
      "text": "主题设置",
      "desc": "点击？查看主题设置用法指南",
      "bindKey": "themeList",
      "tabText": "主题[index]",
      "default": [
        {
          "key": "blue",
          "mainColor": {
            "hex": "#0073CA",
            "hex8": "#0073CAFF"
          }
        },
        {
          "key": "red",
          "mainColor": {
            "hex": "#E21A1A",
            "hex8": "#E21A1AFF"
          }
        },
        {
          "key": "green",
          "mainColor": {
            "hex": "#0EAF64",
            "hex8": "#0EAF64FF"
          }
        }
      ],
      "children": [
        {
          "type": "select",
          "layoutType": "inline",
          "text": "主题标识",
          "bindKey": "key",
          "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
          "default": "",
          "placeholder": "例如：blue",
          "ctrlAttrObject": {
            "mode": "combobox"
          },
          "dictionary": [
            {
              "label": "blue",
              "value": "blue"
            },
            {
              "label": "red",
              "value": "red"
            },
            {
              "label": "green",
              "value": "green"
            }
          ]
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "主要颜色",
          "bindKey": "mainColor",
          "desc": "主题的主要颜色",
          "placeholder": "请选择颜色",
          "display": "@[key]"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "group",
          "text": "适配设置",
          "desc": "通过设置属性来适配移动端页面尺寸",
          "children": [
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "基准值",
              "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
              "bindKey": "baseValue",
              "default": "414"
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "适配比例",
              "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
              "bindKey": "adaptationRatio",
              "default": "1.2"
            }
          ]
        },
        {
          "type": "dataSourceSelect",
          "layoutType": "inline",
          "text": "数据源",
          "desc": "用于选择时间轴的数据源",
          "bindKey": "dataSource",
          "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup"
        },
        {
            "type": "actionSelect",
            "layoutType": "block",
            "text": "自定义参数函数",
            "bindKey": "customParamFunction",
            "desc": "自定义参数函数，返回的对象则会被合并到数据源参数中",
            "multiple": false
        },
        {
          "type": "group",
          "text": "字段设置",
          "desc": "页面数据绑定",
          "children": [
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "日期",
              "bindKey": "labelInterface",
              "default": "label"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "标题",
              "bindKey": "titleInterface",
              "default": "title"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "详情",
              "bindKey": "detailInterface",
              "default": "detail"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "描述",
              "bindKey": "descInterface",
              "default": "desc"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "图标路径",
              "bindKey": "iconInterface",
              "default": "icon"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "图标描述",
              "bindKey": "iconTextInterface",
              "default": "iconText"
            }
          ]
        },
        {
            "type": "select",
            "layoutType": "inline",
            "text": "刷新KEY",
            "bindKey": "messageRefreshKey",
            "desc": "根据组件接收到的消息KEY来刷新数据",
            "default": "",
            "multiple": true,
            "placeholder": "示例：inbox,info",
            "ctrlAttrObject": {
                "mode": "tags"
            },
            "dictionary": [
                {
                    "label": "inbox",
                    "value": "inbox"
                },
                {
                    "label": "info",
                    "value": "info"
                }
            ]
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "统一点击自定义函数",
          "bindKey": "allClickCustomFunction",
          "desc": "用于绑定按钮点击触发的统一函数",
          "multiple": false
        }
      ]
    }
  ]
}
